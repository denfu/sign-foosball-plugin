{
  "manifest_version": 2,

  "name": "Signavio Foosball",
  "description": "This extension is to coordinate foosball games at the company.",
  "version": "0.0.0.3",

  "permissions": [
    "notifications",
    "storage",
    "gcm"
  ],

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  
  "externally_connectable": {
   
    "matches": ["http://sign.kicker.com/*", "http://sign.kicker.com/"]
  }
}