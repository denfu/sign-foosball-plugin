{
  "manifest_version": 2,

  "name": "Company Foosball",
  "description": "This extension is to coordinate foosball games at the company.",
  "version": "0.0.0.3",

  "permissions": [
    "notifications",
    "storage" 
  ],

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["popup.js"]
  },
  
  "externally_connectable": {
   
    "matches": ["http://sign-kicker.meteor.com/*", "http://sign-kicker.meteor.com/"]
  }
}